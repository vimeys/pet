.water {
  position: relative;
  width: 300rpx;
  height: 300rpx;
  margin: 100rpx auto;
  background: #fee632;
  border-radius: 50%;
   overflow: hidden 
}

.water image {
  width: 1080rpx;
  position: absolute;
  left: 0;
}

.water .water1 {
  bottom: 0;
  animation: water1 5s ease-in-out infinite alternate;
}

.water .water2 {
  bottom: -10rpx;
  animation: water2 4.5s ease-in-out infinite alternate;
}

@keyframes water1 {
   0% {
     bottom: 0rpx;
    left: -100rpx;
  }
  100% {
    bottom: -0rpx;
    left: -400rpx;
  } 
}
@keyframes water2 {
   0% {
     bottom: -0rpx;
    left: -100rpx;
  }
  100% {
    bottom: -0rpx;
    left: -400rpx;
  } 
}


@keyframes move_wave {
  0% {
    transform: translateX(0) translateZ(0) scaleY(1);
  }

  50% {
    transform: translateX(-25%) translateZ(0) scaleY(0.55);
  }

  100% {
    transform: translateX(-50%) translateZ(0) scaleY(1);
  }
}

.waveWrapper {
  overflow: hidden;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  top: 0;
  margin: auto;
}

.waveWrapperInner {
  position: absolute;
  width: 100%;
  overflow: hidden;
  height: 100%;
  bottom: -1px;
  background-image: linear-gradient(to top, #86377b 20%, #27273c 80%);
}

.bgTop {
  z-index: 15;
  opacity: 0.5;
}

.bgMiddle {
  z-index: 10;
  opacity: 0.75;
}

.bgBottom {
  z-index: 5;
}

.wave {
  position: absolute;
  left: 0;
  width: 200%;
  height: 100%;
  background-repeat: repeat no-repeat;
  background-position: 0 bottom;
  transform-origin: center bottom;
}

.waveTop {
  background-size: 50% 100px;
}

.waveAnimation .waveTop {
  animation: move-wave 3s;
  -webkit-animation: move-wave 3s;
  -webkit-animation-delay: 1s;
  animation-delay: 1s;
}

.waveMiddle {
  background-size: 50% 120px;
}

.waveAnimation .waveMiddle {
  animation: move_wave 10s linear infinite;
}

.waveBottom {
  background-size: 50% 100px;
}

.waveAnimation .waveBottom {
  animation: move_wave 15s linear infinite;
}
