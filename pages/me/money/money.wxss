/* pages/me/money/money.wxss */

/* banner */

.container::before {
  background-color: #eaeaea;
}

.section-banner .banner {
  height: 425rpx;
  position: relative;
}

.section-banner .banner .money-wrap {
  position: relative;
  top: 25rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 310rpx;
  height: 310rpx;
  margin: auto;
  background: #ffc900;
  border-radius: 50%;
  overflow: hidden;
  border: 25rpx solid #fff7c1;
}

.section-banner .banner .money-wrap image {
  width: 1080rpx;
  position: absolute;
  left: 0;
}

.section-banner .banner .money-wrap .water1 {
  bottom: 0;
  animation: water 5s ease-in-out infinite alternate;
}

.section-banner .banner .money-wrap .water2 {
  bottom: -10rpx;
  animation: water 4.5s ease-in-out infinite alternate;
}

@keyframes water {
  0% {
    bottom: 0rpx;
    left: -100rpx;
  }

  100% {
    bottom: -0rpx;
    left: -400rpx;
  }
}

.section-banner .money-wrap .money text {
  display: block;
  text-align: center;
  color: #fff;
}

.section-banner .money-wrap .money .num {
  font-size: 70rpx;
  margin-top: -10rpx;
}

.section-banner .money-wrap .money .hr {
  width: 110rpx;
  height: 2rpx;
  background: #ffe480;
  margin: 20rpx auto;
}

.section-banner .money-wrap .money .title {
  font-size: 28rpx;
}

.section-banner .banner .dot {
  display: block;
  width: 65rpx;
  height: 65rpx;
  background: #ffc900;
  border-radius: 50%;
  text-align: center;
  line-height: 65rpx;
  font-size: 24rpx;
  color: #fff;
  position: absolute;
}

.section-banner .banner .dot.pl {
  top: 225rpx;
  left: 55rpx;
  animation: dot 2.5s ease-in-out infinite alternate;
}

.section-banner .banner .dot.dz {
  top: 55rpx;
  right: 110rpx;
  animation: dot 2s ease-in-out infinite alternate;
}

.section-banner .banner .dot.qd {
  top: 240rpx;
  right: 65rpx;
  animation: dot 1.5s ease-in-out infinite alternate;
}
@keyframes dot {
  0% {
    transform: translateY(-30%)
  }

  100% {
    transform: translateY(30%)
  }
}
.section-banner .hr-img {
  width: 100%;
  position: absolute;
  bottom: 0;
  left: 0;
}

.section-banner .btn {
  width: 100%;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  font-size: 26rpx;
  border-radius: 10rpx;
  background: #fee632;
  margin: 30rpx 0;
}

/* tab */

.section-tab .section-nav {
  border-top: none;
}
.section-tab .tab-bd>view{
  display: none
}
.section-tab .tab-bd>view.active{
  display: block
}
.section-tab .section-nav .item {
  height: 85rpx;
  line-height: 85rpx;
}

.section-tab .zan-cell {
  padding: 30rpx 0;
  font-size: 28rpx;
  color: #888;
}

.section-tab .zan-cell::after {
  left: 0;
}

.section-tab .zan-cell .zan-cell__ft {
  display: flex;
  align-items: center;
}
.section-tab .zan-cell .zan-cell__ft .num{
  display: block;
  color: #ffbe34;
}
.section-tab .zan-cell .zan-cell__ft image{
  width: 32rpx;
}

.section-tab .zan-cell .zan-cell__ft .num.add {
  color: #fe2121;
}

/* 爪币流水 */
.section-tab .tab-bd-details .zan-cell .zan-cell__hd{
  width: 340rpx
}
.section-tab .tab-bd-details .zan-cell .zan-cell__bd{
  font-size: 24rpx;
}

.section-tab .tab-bd-details  .zan-cell .zan-cell__ft .num{
  margin-right: 25rpx;
}

/* 爪币任务 */
.section-tab .tab-bd-task .zan-cell__hd{
  width: 32rpx;
  margin-right: 15rpx;
}
.section-tab .tab-bd-task .zan-cell__ft image{
  margin-right: 10rpx;
}
