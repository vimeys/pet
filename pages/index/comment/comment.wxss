.section-reply {
  padding: 0 20rpx;
  border-top: 1rpx solid #eaeaea;
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  background: #fff;
  line-height: 70rpx;
  font-size: 28rpx;
}
.section-reply.active{
  position: relative;
}
.section-reply input {
  width: 580rpx;
  height: 70rpx;
  border-radius: 35rpx;
  border: 1rpx solid #eaeaea;
  padding: 0 20rpx;
  box-sizing: border-box;
}

.section-reply .placeholder {
  color: #888;
}

.section-reply .btn {
  width: 120rpx;
  height: 70rpx;
  text-align: center;
  line-height: 70rpx;
  background: #fee632;
  border-radius: 35rpx;
}
