<view  wx:if="{{!combine}}">
    <view class="container1"
          id="container"
          catch:touchstart="touchStart"
          catch:touchend="touchEnd"
          catch:touchmove="touchMove"
          style="height:{{height}}rpx" >
        <image class="bg" src="{{bgPic}}"
               mode="aspectFill"
               style="width: 750rpx; height: 750rpx" >
        </image>
        <!--<image class="bg" src="{{bgPic}}"-->
               <!--mode="widthFix"-->
               <!--style="height:{{height}}rpx" >-->
        <!--</image>-->
        <icon type="cancel"
              class="cancel"
              id="cancel"
              style="top:{{cancelCenterY-10+'px'}};left:{{cancelCenterX-10+'px'}}"
              wx:if="{{chartlet}}">
        </icon>
        <icon type="waiting"
              class="handle"
              id="handle"
              color="green"
              style="top:{{handleCenterY-10+'px'}};left:{{handleCenterX-10+'px'}}"
              wx:if="{{chartlet}}">
        </icon>
        <image class="hat"
               id='hat'
               src="../../../images/{{currentHatId}}.png"
               style="top:{{hatCenterY-hatSize/2-2+'px'}};left:{{hatCenterX-hatSize/2-2+'px'}};transform:rotate({{rotate+'deg'}}) scale({{scale}})"
               wx:if="{{chartlet}}">
        </image>
    </view>
    <view class="thumbnail-items">
        <block wx:for="{{bgPics}}" wx:key="key">
            <image src="{{item}}"
                   class="thumbnail"
                   data-id="{{index}}"
                   bindtap="chooseImage" >
            </image>
        </block>
    </view>
    <view class="gather-list">
        <!--<scroll-view scroll-x="true" class="scrollView">-->
            <view class="gather-li active" bind:tap="showImageList">
                <image src="../../../images/2.png"></image>
                <text>桃心贴图</text>
            </view>
            <view class="gather-li">
                <image src="../../../images/2.png"></image>
                <text>桃心贴图</text>
            </view>
            <view class="gather-li">
                <image src="../../../images/2.png"></image>
                <text>桃心贴图</text>
            </view>
            <view class="gather-li">
                <image src="../../../images/2.png"></image>
                <text>桃心贴图</text>
            </view>
            <view class="gather-li">
                <image src="../../../images/2.png"></image>
                <text>桃心贴图</text>
            </view>
        <!--</scroll-view>-->
        <view class="prev-btn"
              bind:tap="prevPic">
            <image src="../../../images/1.png"
                   class="prev-btn-image">
            </image>预览
        </view>
    </view>
    <!--<button bind:tap="prevPic">预览</button>-->
    <button bind:tap="goCopper">剪切</button>
    <!--<button bind:tap="combinePic">确定</button>-->
    <!--<button bind:tap="save">保存</button>-->
    <view bind:tap="updata" class="upLoad">发布</view>
    <!--<button bind:tap="showImageList">选择贴图</button>-->


    <scroll-view class="scrollView"
                 scroll-x="true"
                 wx:if="{{showImageList}}">
        <image class="imgList"
               wx:for="...imgList"
               wx:key="{{index+1}}"
               src="../../../images/{{index+1}}.png"
               data-hat-id="{{index+1}}"
               bind:tap="chooseImg">
        </image>
    </scroll-view>
</view>
<canvas class="myCanvas"
        bindtap="prevPicHide"
        canvas-id="myCanvas"
        style="height:{{height}}rpx;width:{{width}}rpx;position: fixed;top:{{top}}px;left:{{left}}px "/>
