/* pages/index/imageEditor/imageEditor.wxss */
.thumbnail-items{
    width:100%;
    height:150rpx;
    display: flex;
    flex-direction: row;
    justify-content:space-around;
    align-items: center;
}
.thumbnail{
    width: 100rpx;
    height: 100rpx;
}


.container1{
    height:300px;
    width:100%;
}
.bg{
    position: absolute;
    z-index:0;
    height: 300px;
    width:100%;
}
button{
    margin-top:10rpx;
}
.hat{
    height: 100px;
    width: 100px;
    position: absolute;
    border: dashed 1px #fff;
    top:100px;
}
.handle,.cancel{
    position: absolute;
    z-index: 1;
    width:20px;
    height:20px;
}
.scrollView{
    width: 100%;
    position: absolute;
    bottom: 5px;
    white-space: nowrap;
}
.imgList{
    height: 70px;
    width: 70px;
    border:2px solid;
    margin: 5px;
    display: inline-block;
}
.myCanvas{
    background: #fff;
    z-index: 10;
    /*top:-1000px;*/
    /*left: -1000px;*/
}
.prev{
    width: 100%;
    height: 100%;
}
.prev image{
    width: 100%;
