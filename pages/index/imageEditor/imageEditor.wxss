/* pages/index/imageEditor/imageEditor.wxss */


.container1{
    min-height:300px;
    width:100%;
}
.bg{
    position: absolute;
    z-index:0;
    width:100%;
}
button{
    margin-top:10rpx;
}
.hat{
    height: 100px;
    width: 100px;
    position: absolute;
    border: dashed 1px #fff;
    top:100px;
}
.handle,.cancel{
    position: absolute;
    z-index: 1;
    width:20px;
    height:20px;
}
.scrollView{
    width: 100%;
    position: absolute;
    bottom: 5px;
    white-space: nowrap;
    background: #fff;
}
.imgList{
    height: 70px;
    width: 70px;
    border:2px solid;
    margin: 5px;
    display: inline-block;
}

.myCanvas{
    background: #fff;
    z-index: 10;
    /*top:-1000px;*/
    /*left: -1000px;*/
}
.prev{
    width: 100%;
    height: 100%;
}
.prev image{
    width: 100%;
    /*height: 100%;*/
}

/*贴图集*/
.gather-list{
    width: 100%;
    height: 100rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
}
.gather-lis{
    width: 642rpx;
    /*width: 100%;*/
    /*position: absolute;*/
    /*bottom: 5px;*/
    white-space: nowrap;
    background: #fff;
    display: flex;
}
.gather-li{
    width: 125rpx;
    display: inline-block;
    height: 100%;
    color:#888888;
    font-size: 22rpx;
    text-align: center;
    box-sizing: border-box;
    padding-top:10rpx;
    /*display: flex;*/
    /*flex-direction: column;*/
    /*justify-content: center;*/
    /*align-items: center;*/
}
.gather-li image{
    opacity: .8;
    width: 40rpx;
    height: 40rpx;
    margin: 0 auto 10rpx;

}
.active{
    color:#222;
    background: #f2f2f2;

}
.active image{
    opacity: 1;
}
.prev-btn{
    width: 125rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    color:#222;
    justify-content: center;
    align-items: center;
    font-size: 26rpx;
}
.prev-btn image{
    width: 26rpx;
    height: 26rpx;
}


