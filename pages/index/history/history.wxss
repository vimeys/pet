/* pages/index/history/history.wxss */

.section-swiper {
  margin-left: -20rpx;
  margin-right: -20rpx;
  position: relative;
}

.section-swiper .img {
  width: 750rpx;
  height: 750rpx;
}

.section-swiper .left, .section-swiper .right {
  position: absolute;
  top: 50%;
  transform: translate(0, -50%);
}

.section-swiper .left {
  left: 20rpx;
}

.section-swiper .right {
  right: 20rpx;
}

.section-swiper .left image, .section-swiper .right image {
  width: 85rpx;
}

/* 按钮 */
.section-btn{
  margin-top: 120rpx;
}
.section-btn, .section-btn .btn {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.section-btn .btn {
  justify-content: center;
}
.section-btn .btn {
  height: 85rpx;
  width: 180rpx;
  box-sizing: border-box;
  border: 1rpx solid #000;
  border-radius: 42rpx;
}

.section-btn .btn image {
  width: 32rpx;
  margin-right: 10rpx;
}

.section-btn .btn text {
  display: block;
  font-size: 28rpx;
  color: #222;
}
.section-btn .btn:nth-of-type(2){
  width: 300rpx;
  background: #FEE632;
  border-color: #FEE632
}