<!--pages/index/history/history.wxml-->
<view class='container'>

  <!-- 图片 -->
  <view class='section-swiper'>
    <image class='img' src='{{test_img_hsq}}'></image>
    <view class='left'>
      <image src='/images/icon/index-history-left.png' mode='widthFix'></image>
    </view>
    <view class='right'>
      <image src='/images/icon/index-history-right.png' mode='widthFix'></image>
    </view>
  </view>

  <!-- 按钮 -->
  <view class='section-btn'>
    <view class='btn'>
      <image src='/images/icon/index-history-love.png' mode='widthFix'></image>
      <text>点赞</text>
    </view>
    <view class='btn'>
      <text>保存到手机</text>
    </view>
    <view class='btn'>
      <image src='/images/icon/index-history-share.png' mode='widthFix'></image>
      <text>点赞</text>
    </view>
  </view>


</view>