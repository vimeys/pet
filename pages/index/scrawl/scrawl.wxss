/* pages/index/scrawl/scrawl.wxss */
@import "../imageEditor/imageEditor.wxss";
page{
    background: #f2f2f2;
}

.scrollView1{
    width: 100%;
    margin-top: 30rpx;
    white-space: nowrap;
    background: #fff;
}

.hr-1{
    /*margin-top: 50rpx;*/
    background: #fff;
    height: 40rpx;
    margin-bottom: 1px;
}
.gather-list{
    width: 100%;
    height: 100rpx;
    background: #fff;
    display: flex;
    flex-direction: row;
}
.gather-li{
    width: 125rpx;
    height: 100%;
    color:#888888;
    font-size: 22rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.gather-li image{
    opacity: .8;
    width: 40rpx;
    height: 40rpx;
}
.active{
    color:#222;
    background: #f2f2f2;

}
.active image{
    opacity: 1;
}
.prev-btn{
    width: 125rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
    color:#222;
    justify-content: center;
    align-items: center;
    font-size: 26rpx;
}
.prev-btn image{
    width: 26rpx;
    height: 26rpx;
}
.footer{
    margin-bottom: 10rpx;
    width: 750rpx;
    height: 100rpx;
    display: flex;
    flex-direction: row;
}
.footer-log{
    width: 450rpx;
    height: 100%;
    background: #fff;
    font-size: 28rpx;
    line-height: 100rpx;
    color: #222;
    padding-left: 30rpx;
    box-sizing: border-box;
}
.footer-updata,.footer-save{
    font-size: 28rpx;
    line-height: 100rpx;
    background: #FEE632;
    text-align: center;
    flex: 1;
}
.footer-updata{
    background: #fff;
    color:#222;
    border: 1px solid #222;
}



/*canvas*/
.myCanvas{
    background: #fff;
    z-index: 10;
    /*top:-1000px;*/
    /*left: -1000px;*/
}
.prev{
    width: 100%;
    height: 100%;
}
.prev image{
    width: 100%;
    /*height: 100%;*/
}