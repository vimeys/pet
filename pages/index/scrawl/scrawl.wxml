                      y="{{hatCenterY}}"
                      bindchange="move"
                      scale scale-min="0.5" scale-max="4" scale-value="{{scale}}"
                      direction="all">
            <view  style="width: 100%;height: 100%; position: relative; z-index: 2;border:1px solid #fff;transform:rotate({{rotate}}deg)">
