/* 热门话题 */

.section-hot {
  padding: 30rpx 0;
}

.section-hot .scroll {
  display: flex;
  width: 100%;
  margin: 30rpx 0;
  overflow-x: auto;
  flex-wrap: nowrap;
}

.section-hot .scroll>view {
  margin-right: 20rpx;
}

.section-hot .scroll>view, .scroll view image {
  width: 260rpx;
  height: 180rpx;
  position: relative;
  border-radius: 20rpx;
}

.section-hot .scroll view text {
  height: 35rpx;
  line-height: 35rpx;
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  border-radius: 0 0 20rpx 20rpx;
  box-sizing: border-box;
  padding: 0 20rpx;
  text-align: center;
  font-size: 24rpx;
  background: rgba(255, 255, 255, 0.5);
}

.section-hot .word {
  display: flex;
  flex-wrap: wrap;
  margin-top: -20rpx;
}

.section-hot .word text {
  display: block;
  padding: 0 20rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #fef2f7;
  border-radius: 25rpx;
  font-size: 24rpx;
  margin-top: 20rpx;
  margin-right: 20rpx;
}